<!--
  While this schema mostly works with database prefixes, foreign key constraints
  must be specified in raw SQL, which needs the prefixed table name.
-->
<schema version="0.3">
  <table name="mla_sources">
    <field name="id" type="I">
      <key />
      <autoincrement />
    </field>
    <field name="org_identity_source_id" type="I">
      <constraint>REFERENCES cm_org_identity_sources(id)</constraint>
    </field>
    <field name="apiroot" type="C" size="256" />
    <field name="apikey" type="C" size="64" />
    <field name="apisecret" type="C" size="128" />
    <field name="created" type="T" />
    <field name="modified" type="T" />

    <index name="mla_sources_i1">
      <col>org_identity_source_id</col>
      <unique />
    </index>
  </table>
</schema>
